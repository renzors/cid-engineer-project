[Unit]
Description=nodeApp
After=network.target

[Service]
ExecStart=/usr/bin/node /var/www/nodeApp/bin/www
Restart=always
RestartSec=500ms
StartLimitInterval=0
User=nobody
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/var/www/nodeApp

[Install]
WantedBy=multi-use.target